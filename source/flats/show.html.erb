<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(50deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url( <%= image_path flat.picture %>); background-position: 50% 40%; height: 300px;">
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="flat-details">
        <div class="flat-owner" style="margin-top:20px;">

          <p><%= flat.owner_name %></p>
        </div>
        <div class="flat-description">
          <p><strong><%= flat.summary %></strong></p>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="wrapper-grey">
        <div id="Book" class="text-center padded">
          <h2>Book this flat</h2>
          <form action="">
            <div class="col-xs-6">
              <input type="Check-in" class= 'form-control' placeholder="Check-in">
            </div>
            <div class="col-xs-6">
              <input type="Check-out" class= 'form-control' placeholder="Check-out">
            </div>
            <div class="col-xs-12">
              <select class="form-control" style="margin-top: 20px;">
                <option value="1">1 guest</option>
                <option value="2">2 guests</option>
                <option value="3">3 guests</option>
                <option value="4">More?</option>
              </select>
            </div>
            <input type="submit" value='Book it' class="btn btn-danger" style= " margin-top: 20px; width: 90%;" >
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="wrapper-grey" style= "border : 1px solid $red">
    <div class="flat-description" style= "margin-top: 50px; padding-bottom: 50px;">
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1 ">
            <div class="wrapper-grey">
              <h2>About this flat</h2>
              <p><%= flat.description %></p>
            </div>

            <hr>

              <div class="col-xs-12" style= "margin-top: 30px">
              <div class="col-xs-12 col-sm-3">
                <p>The Space</p>
              </div>
              <div class="col-xs-12 col-sm-3">
                <ul class="list-unstyled">
                  <li>Accomodates :<strong> <%= flat.accomodates %></strong></li>
                  <li>Bathroom :<strong> <%= flat.bathroom %></strong></li>
                  <li>Bedrooms :<strong> <%= flat.bedrooms %></strong></li>
                  <li>Flat-type :<strong> <%= flat.bed_type %></strong></li>
                </ul>
              </div>
              <div class="col-xs-12 col-sm-3 col-sm-offset-1">
                <ul class="list-unstyled">
                  <li>Beds :<strong> <%= flat.beds %></strong></li>
                  <li>Property_type :<strong> <%= flat.property_type %></strong></li>
                  <li>Room_type :<strong> <%= flat.room_type %></strong></li>
                </ul>
              </div>
            </div>

          </hr>

          <div class="col-xs-12" style= "margin-top: 30px">
            <div class="col-xs-12 col-sm-3">
              <p>Amenities</p>
            </div>
            <div class="col-xs-12 col-sm-3">
              <ul class="list-unstyled">
                <li>Kitchen :<strong> <%= flat.kitchen %></strong></li>
                <li>Wifi :<strong> <%= flat.wifi %></strong></li>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-3 col-sm-offset-1">
              <ul class="list-unstyled">
                <li>Welcome drink :<strong> <%= flat.welcome_drink %></strong></li>
                <li>TV :<strong> <%= flat.tv%></strong></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
