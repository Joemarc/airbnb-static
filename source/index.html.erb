    <!-- Your features code -->
    <div class="wrapper-grey">
        <div class="container text-center padded features">
          <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3">
              <img src="images/globe.png" alt="globe">
              <h2>Discover the world</h2>
              <p>The earth is your new home.</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <img src="images/dollar.png" alt="dollar">
              <h2>Pay online</h2>
              <p>No cash issues anymore.</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <img src="images/beer.png" alt="beer">
              <h2>Meet people</h2>
              <p>Discover new culture and lifestyle.</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <img src="images/heart.png" alt="heart">
              <h2>Share and love</h2>
              <p>Join a community you will love.</p>
          </div>
        </div>
      </div>

    <!-- Your cards code -->
     <div class="container">
      <div class="text-center">
        <h2>Results of your research</h2>
      </div>
       <div class="row">
        <% data.flats.each do |owner, flat| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: url('<%= image_path flat.picture %>');">
              <div class="card-category"><%= flat.city %></div>
              <div class="card-description">
              <h2><%= flat.name %></h2>
              <p><%= flat.summary %></p>
            </div>
            <%= image_tag flat.owner_picture, class:"card-user avatar avatar-large" %>
            <%= link_to "#", "flats/#{owner}.html", class: "card-link" %>
            </div>
          </div>
        <% end %>
      </div>
     </div>


    <div id="Newsletter" class="text-center padded">
      <h2>Get news from us</h2>
      <p>Leave us your mail and get news from us</p>
      <form action="" class="form-inline">
        <input type="email" class='form-control' placeholder="alan@turing.com">
        <!-- <input type="password" class= 'form-control' placeholder="******"> -->
        <input type="submit" value='Submit' class="btn btn-danger" >
      </form>
    </div>
  </div>


